    <title>Contact Us</title>
    <style>
        /* Inline styles to match the provided CSS */
        .contact-page {
            position: relative;
            padding: 80px 20px;
            min-height: 100vh;
            background: url('/images/contactbg.jpg') no-repeat center center fixed;
            background-size: cover;
            width: 100%;
            font-family: 'Segoe UI', sans-serif;
        }

            .contact-page .overlay {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(0, 0, 0, 0.6);
                z-index: 1;
            }

            .contact-page .contact-form {
                position: relative;
                z-index: 2;
                background: #F5F5DC;
                padding: 40px;
                border-radius: 20px;
                max-width: 700px;
                margin: auto;
                color: #5A3D29;
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
            }

                .contact-page .contact-form h2 {
                    text-align: center;
                    color: #000;
                    margin-bottom: 20px;
                }

                .contact-page .contact-form .alert {
                    margin-bottom: 15px;
                    padding: 10px;
                    border-radius: 5px;
                }

                .contact-page .contact-form .alert-danger {
                    background-color: #f8d7da;
                    color: #721c24;
                    border: 1px solid #f5c6cb;
                }

                .contact-page .contact-form .alert-success {
                    background-color: #d4edda;
                    color: #155724;
                    border: 1px solid #c3e6cb;
                }

                .contact-page .contact-form .form-group {
                    margin-bottom: 20px;
                }

                .contact-page .contact-form label {
                    display: block;
                    margin-bottom: 5px;
                    color: #000;
                }

                .contact-page .contact-form input[type="text"],
                .contact-page .contact-form input[type="email"],
                .contact-page .contact-form select,
                .contact-page .contact-form textarea {
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                    font-size: 16px;
                }

                .contact-page .contact-form textarea {
                    resize: vertical;
                }

                .contact-page .contact-form .text-danger {
                    color: #dc3545;
                    margin-top: 5px;
                }

                .contact-page .contact-form .btn-primary {
                    background-color: #A97455;
                    color: white;
                    border: none;
                    padding: 10px 20px;
                    border-radius: 5px;
                    cursor: pointer;
                    width: 100%;
                }

                    .contact-page .contact-form .btn-primary:hover {
                        background-color: #915f43;
                    }
    </style>
</head>

<body>
    <nav class="navbar">
        <div class="navbar-left">
