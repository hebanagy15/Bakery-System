@{
    ViewBag.Title = "Contact Us";
}

<div class="contact-page" style="position: relative; padding: 80px 20px; min-height: 100vh; background: url('/images/contactbg.jpg') no-repeat center center fixed; background-size: cover; width: 100%; font-family: 'Segoe UI', sans-serif;">

    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.6); z-index: 1;"></div>

    <div class="contact-form" style="position: relative; z-index: 2; background: #F5F5DC; padding: 40px; border-radius: 20px; max-width: 700px; margin: auto; color: #5A3D29; box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);">
        <h2 class="text-center text-dark mb-4">Get in Touch</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
        }

        <form asp-action="Contact" method="post" class="container">
            <div class="form-group mb-3">
                <label for="firstName" class="text-dark">First Name</label>
                <input type="text" name="firstName" id="firstName" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label for="lastName" class="text-dark">Last Name</label>
                <input type="text" name="lastName" id="lastName" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label for="email" class="text-dark">Email</label>
                <input type="email" name="email" id="email" class="form-control" required />
                @if (ViewBag.EmailError != null)
                {
                    <div class="text-danger">@ViewBag.EmailError</div>
                }
            </div>

            <div class="form-group mb-3">
                <label for="rating" class="text-dark">Rating</label>
                <select name="rating" id="rating" class="form-control" required>
                    <option value="">-- Select Rating --</option>
                    <option value="5">5 - Excellent</option>
                    <option value="4">4 - Good</option>
                    <option value="3">3 - Average</option>
                    <option value="2">2 - Poor</option>
                    <option value="1">1 - Very Bad</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="bakeryItemId" class="text-dark">Product</label>
                <select name="bakeryItemId" id="bakeryItemId" class="form-control" required>
                    <option value="">-- Select Product --</option>
                    @foreach (var item in ViewBag.BakeryItems)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
            </div>

            <div class="form-group mb-4">
                <label for="message" class="text-dark">Message</label>
                <textarea name="message" id="message" class="form-control" rows="4" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-100" style="background-color: #A97455; color: white; border: none;">Send Message</button>
        </form>
    </div>

</div>
