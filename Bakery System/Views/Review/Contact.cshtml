@{
    ViewBag.Title = "Contact Us";
}

<h2 class="text-center mb-4">Get in Touch</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

<form asp-action="Contact" method="post" class="container" style="max-width:600px">
    <div class="form-group mb-3">
        <label for="firstName">First Name</label>
        <input type="text" name="firstName" id="firstName" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label for="lastName">Last Name</label>
        <input type="text" name="lastName" id="lastName" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label for="rating">Rating</label>
        <select name="rating" id="rating" class="form-control" required>
            <option value="">-- Select Rating --</option>
            <option value="5">5 - Excellent</option>
            <option value="4">4 - Good</option>
            <option value="3">3 - Average</option>
            <option value="2">2 - Poor</option>
            <option value="1">1 - Very Bad</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="bakeryItemId">Product</label>
        <select name="bakeryItemId" id="bakeryItemId" class="form-control" required>
            <option value="">-- Select Product --</option>
            @foreach (var item in ViewBag.BakeryItems)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>

    <div class="form-group mb-4">
        <label for="message">Message</label>
        <textarea name="message" id="message" class="form-control" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary w-100">Send Message</button>
</form>
