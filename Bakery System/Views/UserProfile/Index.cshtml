                        </tr>
                        <tr>
                            <td>18/3/2025</td>
                            <td>12:30</td>
                            <td>5</td>
                            <td class="status upcoming">Up Coming</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Delivery Orders Table -->
            <div class="table-container delivery-table">
                <table>
                    <thead>
                        <tr>
                            <th>Delivery Date</th>
                            <th>Number of Items</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>11/1/2025</td>
                            <td>5</td>
                            <td>100 EGP</td>
