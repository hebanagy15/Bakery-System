                        </tr>
                        <tr>
                            <td>15/2/2025</td>
                            <td>7</td>
                            <td>200 EGP</td>
                            <td class="status past">Past</td>
                        </tr>
                        <tr>
                            <td>18/3/2025</td>
                            <td>8</td>
                            <td>300 EGP</td>
                            <td class="status upcoming">Up Coming</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="cart-button">
                <button class="go-to-cart">GO TO CART >></button>
            </div>
        </section>
