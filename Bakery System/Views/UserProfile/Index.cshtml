    <script>
        const menuToggle = document.getElementById('menu-toggle');
        const navbarMenu = document.getElementById('navbar-menu');
        const navbarRight = document.getElementById('navbar-right');

        menuToggle.addEventListener('click', () => {
            navbarMenu.classList.toggle('show');
            navbarRight.classList.toggle('show');
            menuToggle.classList.toggle('open');
        });
    </script>




   
    <!-- Main Content -->
    <main>
        <section class="user-profile">
            <h2>User Profile</h2>
            <div class="profile-info">
                <div class="profile-image">
                    <img src="UserProfile/css/user-4.jpg" alt="User Profile Image">
                </div>
                <div class="profile-details">
                    <h3>Alaa Mohamed</h3>
                    <p class="user-type">Client</p>
                    <p class="user-location">European (The TEST), Cairo Uni</p>
                </div>
            </div>

            <div class="action-buttons">
                <button class="reservation-btn navigate-button" data-url="@Url.Action("Create", "Reservation")">Make Reservation</button>
                <button class="delivery-btn navigate-button" data-url="@Url.Action("Index", "Menu")">Order Delivery</button>

                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        const navigateButtons = document.querySelectorAll('.navigate-button');
                        navigateButtons.forEach(button => {
                            button.addEventListener('click', function() {
                                const url = this.getAttribute('data-url');
                                if (url) {
                                    window.location.href = url;
                                }
                            });
                        });
                    });
                </script>
            </div>

            <!-- Reservations Table -->
            <div class="table-container reservations-table">
                <table>
                    <thead>
                        <tr>
                            <th>Reservation Date</th>
                            <th>Time</th>
                            <th>Guests Number</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>11/1/2025</td>
