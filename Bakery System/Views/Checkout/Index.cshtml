@model Bakery_System.ViewModels.CheckoutViewModel

<form asp-action="Index" method="post">
    <h2>Checkout</h2>

    <div>
        <label asp-for="PaymentMethod">Payment Method</label>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="CreditCard">Credit/Debit Card</option>
            <option value="Cash">Cash on Delivery</option>
        </select>
    </div>

    <h3>Selected Items</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.SelectedProducts.Count; i++)
            {
                <tr>
                    <td>@Model.SelectedProducts[i].BakeryItemName</td>
                    <td>@Model.SelectedProducts[i].Price.ToString("C")</td>
                    <td>
                        <input asp-for="@Model.SelectedProducts[i].Quantity" class="form-control" />
                        <input type="hidden" asp-for="@Model.SelectedProducts[i].BakeryItemId" />
                        <input type="hidden" asp-for="@Model.SelectedProducts[i].BakeryItemName" />
                        <input type="hidden" asp-for="@Model.SelectedProducts[i].Price" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Pay Now</button>
</form>

