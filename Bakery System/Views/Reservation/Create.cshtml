@model Bakery_System.Models.Reservation

@{
    ViewData["Title"] = "Make Your Reservation";
}

<div class="reservation-page" style="position: relative; padding: 80px 20px; min-height: 100vh; background: url('/images/reservationbg.jpg') no-repeat center center fixed; background-size: cover; width: 100%; font-family: 'Segoe UI', sans-serif;">

    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.6); z-index: 1;"></div>

    <div class="reservation-form" style="
        position: relative;
        z-index: 2;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(10px);
        padding: 40px;
        border-radius: 20px;
        max-width: 700px;
        margin: auto;
        color: white;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    ">
        <h2 class="text-center" style="margin-bottom: 30px; font-weight: bold;">Make Your Reservation</h2>

        <form asp-action="Create" method="post">
            <div class="mb-4">
                <label asp-for="ReservationDate">Date & Time</label>
                <input asp-for="ReservationDate" class="form-control" type="datetime-local" style="background-color: #333; color: white; border: none;" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DurationInHours">Guests</label>
                <select asp-for="DurationInHours" class="form-control" style="background-color: #333; color: white; border: none;">
                    <option value="1">1-2 Guests</option>
                    <option value="2">3-4 Guests</option>
                    <option value="3">5+ Guests</option>
                </select>
                <span asp-validation-for="DurationInHours" class="text-danger"></span>
            </div>

            <p class="text-center" style="color: #ccc; margin-bottom: 20px;">Please Notice that there is a 100 EGP deposit</p>

            <button type="submit" class="btn" style="background-color: #A97455; color: white; border: none; width: 100%; padding: 15px; font-size: 18px; border-radius: 30px;">Book Now</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
